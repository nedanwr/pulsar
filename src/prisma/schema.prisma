// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id            String   @id @default(uuid())
  email         String   @unique
  username      String
  discriminator String
  avatar_url    String?
  password      String
  servers       Server[]
  messages      Message[]
  verified      Boolean  @default(false)
  createdAt     Int
  updatedAt     Int?

  @@map(name: "users")
}

model Server {
  id          String    @id @default(uuid())
  name        String
  description String?
  avatar_url  String?
  owner       User      @relation(fields: [owner_id], references: [id])
  owner_id    String
  channels    Channel[]
  messages    Message[]
  createdAt   Int
  updatedAt   Int?

  @@map(name: "servers")
}

model Channel {
  id          String    @id @default(uuid())
  name        String
  description String?
  server      Server    @relation(fields: [server_id], references: [id])
  server_id   String
  messages    Message[]
  createdAt   Int
  updatedAt   Int?

  @@map(name: "channels")
}

model Message {
  id         String  @id @default(uuid())
  content    String
  server     Server  @relation(fields: [server_id], references: [id])
  server_id  String
  channel    Channel @relation(fields: [channel_id], references: [id])
  channel_id String
  author     User    @relation(fields: [author_id], references: [id])
  author_id  String
  createdAt  Int
  updatedAt  Int?

  @@map(name: "messages")
}
